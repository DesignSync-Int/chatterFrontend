{
  "name": "chatter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "mock-server": "node mock-server.js",
    "dev:full": "concurrently \"npm run mock-server\" \"npm run dev\"",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:dev": "concurrently \"npm run dev\" \"cypress open\"",
    "test:email": "cypress run --spec cypress/e2e/email-verification.cy.ts",
    "test:auth": "cypress run --spec cypress/e2e/auth.cy.ts",
    "test": "npm run test:e2e",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "validate": "yarn lint && yarn typecheck",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit -p tsconfig.app.json -p tsconfig.node.json",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.79.0",
    "@types/socket.io-client": "^1.4.36",
    "axios": "^1.10.0",
    "bad-words": "^4.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.1",
    "install": "^0.13.0",
    "lucide-react": "^0.511.0",
    "profanity-check": "^0.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.6.3",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "zod": "^4.0.5",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/axios": "^0.9.36",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.0",
    "cypress": "^14.5.1",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "sass-embedded": "^1.89.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}